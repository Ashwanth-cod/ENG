let name = input "What is your name" str
let age = input "Enter your age" int
let happy = input "Are you happy?" bool

say "Hello, " + name
say "You are " + str(age) + " years old."

if happy:
  say "Great to hear you're happy!"
end

repeat 2 times:
  say "looping..."
end

define greet(person):
  say "Hi " + person
end

call greet(name)
